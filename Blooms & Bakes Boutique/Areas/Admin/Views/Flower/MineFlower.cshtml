@model MyFlowersViewModel
@{
	ViewBag.Title = "My Flowers";
}

<h2 class="text-center" style="padding-top: 2em; padding-bottom: 1.5em"><a style="color: #f075a0">My</a> Flowers</h2>

<h4 class="text-center">My <a style="color: #f075a0; padding-bottom: 1em">Added</a> Flowers</h4>
@if (!Model.AddedFlowers.Any())
{
	<h2 class="text-center" style="padding-bottom: 4em; padding-top: 2em">You have no added flowers yet!</h2>
} <div class="row">
	@foreach (var flower in Model.AddedFlowers)
	{
		@await Html.PartialAsync("~/Views/Shared/_FlowerPartial.cshtml", flower)
	}
</div>
<h4 class="text-center">My <a style="color: #f075a0; padding-bottom: 1em">Gathered</a> Flowers</h4>
@if (!Model.GatheredFlowers.Any())
{
	<h2 class="text-center" style="padding-top: 2em">You have no gathered flowers yet!</h2>
} <div class="row">
	@foreach (var flower in Model.GatheredFlowers)
	{
		@await Html.PartialAsync("~/Views/Shared/_FlowerPartial.cshtml", flower)
	}
</div>
