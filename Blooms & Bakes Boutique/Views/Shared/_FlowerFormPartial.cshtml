@model FlowerFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" placeholder="Flower Title...">
				<span asp-validation-for="Title" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Colour"></label>
				<input asp-for="Colour" class="form-control" placeholder="Flower Colour...">
				<span asp-validation-for="Colour" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="3" class="form-control" placeholder="Flower Description..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>			
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
				<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PricePerBouquet"></label>
				<input asp-for="PricePerBouquet" class="form-control">
				<span asp-validation-for="PricePerBouquet" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control">
					@foreach (var category in Model.FlowerCategories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small text-danger"></span>
			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3" style="background-color: lightpink; border: 2px solid #f075a0" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
